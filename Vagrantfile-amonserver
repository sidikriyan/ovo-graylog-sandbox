Vagrant.require_version ">= 1.7.0"

Vagrant.configure(2) do |config|


config.vm.define "amonserver" do |amonserver|
        amonserver.vm.box = "ubuntu/xenial64"
        amonserver.vm.network "public_network", bridge: "wlp2s0"
        amonserver.vm.hostname = "amonserver"
        amonserver.vbguest.auto_update = false
        amonserver.ssh.forward_agent = true
        amonserver.vm.provider :virtualbox do |vb|
            vb.customize ["modifyvm", :id, "--memory", 2048]
            vb.customize ["modifyvm", :id, "--cpus", 1]
            vb.customize ["modifyvm", :id, "--name", 'amonserver']
end
end
config.vm.provision "ansible" do |ansible|
    ansible.verbose = "v"
    ansible.limit = "all"
    ansible.playbook = "graylog.yml"
    ansible.inventory_path= "./inventory/hosts"
  end
end